  - const footerMods = ""
  - const currentUrl = "archive.html"
  -
    const breadcrumbs = [
      {
        text: "Главная",
        href: "index.html",
      },
      {
        text: "Архив концертов",
        href: "archive.html",
      },
    ]
  -
    const previousConcerts = [
      {
        cardTitle: "Трибьют Фрэнку Синатре (вокал, джаз)",
        description: "Хиты великого Синатры в&nbsp;безупречном исполнении.",
        dateText: "23 мар, чт 20:30",
        dateTime: "2023-03-23 20:30",
        image: "music-performer-1"
      },
    ]
  -
    const pagination = [
      {
        link: {href: "#"},
        icon: {name: "icon-arrow-left"},
        label: "Предыдущая страница",
        isPrev: true,
        isDisabled: true
      },
      {
        link: {text: "1", href: "#"},
        label: "Страница 1",
        isCurrent: true
      },
      {
        link: {text: "2", href: "#"},
        label: "Страница 2"
