block main
  main
    +page-content()
      +breadcrumbs(breadcrumbs)
      +page-section()
        +show-cards-section({
          text: 'Архив концертов',
          tag: 'h1',
        }, previousConcerts, pagination)
      +page-section().page-section--bg-gray.soon-on-stage
        +show-cards-section({
          text: "Скоро на сцене",
          }, cards)
  div.loader-wrapper
    span.loader
  script(src="js/servermain.min.js" defer)
  script(src="js/archive.min.js" defer)

block modals
  +modal("modal--search")(data-modal="search")
    +modal-search()
